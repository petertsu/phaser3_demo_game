<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.petert.demogame" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DemoGame</name>
    <description>
        Phaser 3 demo game
    </description>
    <author email="peter.tsuprun@gmail.com" href="https://github.com/petertsu/phaser3_demo_game/">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="Orientation" value="portrait" />
    <icon src="assets/images/monster.png" />
    <engine name="android" spec="^7.1.1" />
</widget>
